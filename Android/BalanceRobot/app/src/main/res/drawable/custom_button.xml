<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorPressedStart"
                android:endColor="@color/colorPressedEnd"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorStroke" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorFocusedEnd"
                android:startColor="@color/colorFocusedStart"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorStroke" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorEnd"
                android:startColor="@color/colorStart"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorStroke" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"  />
        </shape>
    </item>
</selector>